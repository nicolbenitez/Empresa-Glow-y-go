// Theme toggle (pink <-> black)
const themeBtn = document.getElementById('themeToggle');
const body = document.body;
const yearSpan = document.getElementById('year');

yearSpan.textContent = new Date().getFullYear();

function setTheme(theme){
  if(theme === 'black'){
    body.classList.add('theme-black');
    body.classList.remove('theme-pink');
    themeBtn.textContent = 'Modo ✦';
    themeBtn.setAttribute('aria-pressed', 'true');
  } else {
    body.classList.remove('theme-black');
    body.classList.add('theme-pink');
    themeBtn.textContent = 'Modo ⏤';
    themeBtn.setAttribute('aria-pressed', 'false');
  }
}

// detect stored preference
const saved = localStorage.getItem('glow_theme');
if(saved === 'black') setTheme('black');
else setTheme('pink');

themeBtn.addEventListener('click', () => {
  const isBlack = body.classList.contains('theme-black');
  const next = isBlack ? 'pink' : 'black';
  setTheme(next);
  localStorage.setItem('glow_theme', next);
});

// Basic 'send' function for contact form: opens WhatsApp with form data
function sendRequest(){
  const name = document.getElementById('name').value || 'Cliente';
  const service = document.getElementById('service').value;
  const date = document.getElementById('date').value || 'Sin fecha';
  const msg = document.getElementById('message').value || '';
  const text = `Hola Glow & Go, soy ${encodeURIComponent(name)}. Interesada en: ${encodeURIComponent(service)}. Fecha: ${encodeURIComponent(date)}. ${encodeURIComponent(msg)}`;
  const url = `https://wa.me/573026334176?text=${text}`;
  window.open(url, '_blank');
}

